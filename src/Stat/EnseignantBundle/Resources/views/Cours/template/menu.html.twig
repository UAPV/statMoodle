      {% endif %}
      {% if student > 0 %}
        <li><a class="dr-icon dr-icon-profile" href="{{ path('stat_enseignant_homepage') }}#tabMesCoursEtudiant">Vue "étudiant"</a></li>
      {% endif %}
      {% if responsable == true %}
        <li><a class="dr-icon dr-icon-users" href="{{ path('stat_enseignant_homepage') }}#tabResponsableFormation">Vue "responsable"</a></li>
      {% endif %}
      {% if labelisation == true %}
        <li><a class="dr-icon dr-icon-trophy" href="{{ path('stat_labelisation_homepage') }}">Vue "labelisation"</a></li>
