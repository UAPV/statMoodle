<script type="text/javascript">
    $(document).ready(function(){
        $('.dr-menu > ul').hide(100);

        $('.dr-label').on('click', function(){
            if($('.dr-menu > ul').is(':hidden')){
                $('.dr-menu > ul').css('display', 'block');
            }
        });

        $('.dr-icon-menu').on('click', function(){
          if($('.dr-menu > ul').is(':hidden')){
              $('.dr-menu > ul').css('display', 'block');
            }
          else
              $('.dr-menu > ul').hide(100);
        });
    })
</script>

