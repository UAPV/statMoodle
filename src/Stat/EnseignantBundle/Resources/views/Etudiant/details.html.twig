{% extends "StatEnseignantBundle::layout.html.twig" %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function(){

            $('.stackedBar').each(function()
            {
                id = $(this).attr('id');
                idCours = $('#idCours').val();
                url = $('#url').val();
                getStackedBarChart(id,$('#'+id+'_data').val(),url+'/'+idCours);
            });
        })
    </script>
{% endblock %}

